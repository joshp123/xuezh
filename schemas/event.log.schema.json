{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "event.log ok envelope",
  "type": "object",
  "required": [
    "ok",
    "schema_version",
    "command",
    "data",
    "artifacts",
    "truncated",
    "limits"
  ],
  "properties": {
    "ok": {
      "const": true
    },
    "schema_version": {
      "type": "string"
    },
    "command": {
      "const": "event.log"
    },
    "data": {
      "type": "object",
      "required": [
        "event_id",
        "event_type",
        "ts",
        "modality",
        "items"
      ],
      "properties": {
        "event_id": {
          "type": "string",
          "pattern": "^(ev_[0-9A-Z]{26}|ev_[0-9a-f]{32})$"
        },
        "event_type": {
          "type": "string"
        },
        "ts": {
          "type": "string"
        },
        "modality": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[wgc]_[0-9a-f]{12}$"
          }
        },
        "context": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array"
    },
    "truncated": {
      "type": "boolean"
    },
    "limits": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
